.sortable-item {
  background: light-color;
  color: action-color;
  display: flex;

  > .icon {
    @extends .center-contents;
    cursor: move;
    cursor: grab;
    cursor: -moz-grab;
    cursor: -webkit-grab;
    width: 2.8em;
  }

  a {
    flex-grow: 1;
  }
}

.gu-mirror {
  position: fixed !important;
  margin: 0 !important;
  z-index: 9999 !important;
}

.gu-hide {
  display: none !important;
}

.gu-unselectable {
  -webkit-user-select: none !important;
  -moz-user-select: none !important;
  -ms-user-select: none !important;
  user-select: none !important;
}

.gu-transit {
  opacity: 0.2;
}

.gu-mirror {
  opacity: 0.8;
}
