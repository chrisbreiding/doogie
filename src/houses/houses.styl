.list-house {
  a,
  h3 {
    @extends .truncate-text;
  }

  p {
    @extends .truncate-text;
    color: lighten(dark-color, 20%);
    font-size: 0.9em;
    margin: 0.2em 0 0;
  }

  a:hover,
  a:focus {
    p {
      color: light-color;
    }
  }
}

.houses {
  main {
    overflow-x: scroll;
    width: 100%;
  }

  .container {
    padding: 0.5em;
    display: flex;
    justify-content: space-around;

    .house {
      border: solid 0.1em darken(light-color, 40%);
      margin: 0.5em;
      width: 20em;

      main {
        bottom: auto;
        left: auto;
        position: static;
        right: auto;
        top: auto;
      }
    }

    header {
      display: none;
    }

    main {
      padding-top: 0;
    }

    .__name {
      margin-top: 0;
    }
  }
}
