.list-house {
  p {
    color: lighten(dark-color, 20%);
    font-size: 0.9em;
    margin: 0.2em 0 0;
  }
}

.houses {
  main {
    overflow-x: scroll;
    width: 100%;
  }

  .container {
    padding: 0.5em;

    .house {
      border: solid 0.1em darken(light-color, 40%);
      bottom: auto;
      float: left;
      left: auto;
      margin: 0.5em;
      position: static;
      right: auto;
      top: auto;
      width: 20em;
    }

    header {
      display: none;
    }

    main {
      padding-top: 0;
    }

    .__name {
      margin-top: 0;
    }
  }
}

.archived-houses {
  main {
    padding-top: 3.8em;
  }
}
