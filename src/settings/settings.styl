.settings {
  .label {
    margin-bottom: 0.2em;

    + li {
      margin-top: 0.2em;
    }
  }

  main {
    padding-bottom: 0.8em;
  }
}

.field-item {
  a {
    align-items: center;
    display: flex;
    justify-content: space-between;

    .icon {
      color: lighten(dark-color, 20%);
    }

    &:hover,
    &:focus {
      .icon {
        color: light-color;
      }
    }
  }

  &.field-type-heading a {
    font-weight: bold;
  }
}
